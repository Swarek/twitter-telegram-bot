# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHANNEL_ID=@your_channel_here

# Twitter Scraping (twscrape)
TWITTER_USERNAME_1=
TWITTER_PASSWORD_1=
TWITTER_EMAIL_1=

# Compte secondaire pour rotation (optionnel)
TWITTER_USERNAME_2=
TWITTER_PASSWORD_2=
TWITTER_EMAIL_2=

# ScrapFly API (fallback optionnel)
SCRAPFLY_API_KEY=

# Database (PostgreSQL local)
DATABASE_URL=postgresql://localhost/twitter_telegram

# Redis (local)
REDIS_URL=redis://localhost:6379

# Application
ENVIRONMENT=development
LOG_LEVEL=info
POLL_INTERVAL=28800       # Vérification 3 fois par jour (8h = 28800 secondes)
MAX_TWEET_AGE=3600        # Ignorer tweets > 1 heure (secondes)
WORKERS=1                 # Nombre de workers asynchrones

# Features
ENABLE_MEDIA=true         # Télécharger et publier les médias
ENABLE_THREADS=true       # Reconstituer les threads Twitter
ENABLE_METRICS=true       # Activer les métriques Prometheus
ENABLE_FILTERS=true       # Activer les filtres personnalisés

# Monitoring (optionnel)
HEALTHCHECK_URL=          # URL pour ping de santé (ex: UptimeRobot)
METRICS_PORT=8000         # Port pour les métriques Prometheus

# APIs tierces économiques
RAPIDAPI_KEY=YOUR_RAPIDAPI_KEY_HERE
TWITTERAPI_IO_KEY=        # Clé TwitterAPI.io (0.15$/1000 tweets)
USE_CHEAP_APIS=true       # Activer les APIs économiques