{
  "name": "twitter-telegram-bot",
  "version": "1.0.0",
  "description": "Bot automatique pour partager des tweets depuis Twitter vers des canaux Telegram",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "db:create": "node scripts/db-create.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:reset": "npm run db:create && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t twitter-telegram-bot .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "logs": "tail -f logs/app.log",
    "status": "node scripts/check-status.js",
    "add-account": "node scripts/add-account.js"
  },
  "keywords": [
    "twitter",
    "telegram",
    "bot",
    "automation",
    "social-media"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "twitter-api-v2": "^1.15.0",
    "node-telegram-bot-api": "^0.61.0",
    "sequelize": "^6.35.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "node-cron": "^3.0.0",
    "axios": "^1.6.0",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.0",
    "p-queue": "^7.4.0",
    "got": "^13.0.0",
    "file-type": "^18.7.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.0",
    "@jest/globals": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/*",
      "logs/*"
    ],
    "delay": "1000"
  }
}